<html>

<head>
    {{>header}}
</head>

<body>
    <!-- Start: Navigation with Search -->
    <nav class="navbar navbar-light navbar-expand-md navigation-clean-search">
        <div class="container"><a class="navbar-brand" href="#">CWScheduler</a><button data-toggle="collapse" class="navbar-toggler" data-target="#navcol-1"><span class="sr-only">Toggle navigation</span><span class="navbar-toggler-icon"></span></button>
            <div class="collapse navbar-collapse"
                id="navcol-1">
                <ul class="nav navbar-nav">
                    <li class="nav-item"><a class="nav-link active" href="#">Home</a></li>
                    <li class="nav-item"><a class="nav-link" href="#">Add Coursework</a></li>
                    <li class="nav-item"><a class="nav-link" href="#">Delete coursework</a></li>
                </ul>
                <form class="form-inline mr-auto" target="_self">
                    <div class="form-group"><label for="search-field"><i class="fa fa-search"></i></label><input class="form-control search-field" type="search" id="search-field" name="search"></div>
                </form><a class="btn btn-light action-button" role="button" href="#" style="background: rgb(0,123,255);">Log out</a></div>
        </div>
    </nav>
    <!-- End: Navigation with Search -->
    {{#user_courses}}
    <div class="container">
        <h1>Welcome, {{first_name}}!</h1>
    </div>
    <!-- Start: 1 Row 1 Column -->
    <div style="margin-left: 0;margin-right: 0;padding: 6px;padding-left: 27px;padding-right: 54px;"></div>
    <!-- End: 1 Row 1 Column -->
    <div class="container">
        <div class="card"></div>
    </div>
    <div class="container">
        <div class="card">
        
            <div class="card-header">
                <ul class="nav nav-tabs card-header-tabs">
                    <li class="nav-item"><a class="nav-link active" href="#">First CW</a></li>
                    <li class="nav-item"><a class="nav-link" href="#">Second CW</a></li>
                    <li class="nav-item"><a class="nav-link" href="#">Third CW</a></li>
                </ul>
            </div>
            <div class="card-body" style="width: 80%x;">
                <h5 style="width: 214px;">Coursework: {{coursework}}</h5>
                <h5 style="width: 214px;"></h5>
                <h5 style="width: 292px;">Module: {{module}}</h5>
                <h5 style="width: 214px;font-size: 15px;">{{start}} to {{end}}</h5>
                <div class="progress d-lg-flex justify-content-lg-start" style="max-width: 100%;min-width: 25%;width: 288px;">
                    <div class="progress-bar progress-bar-striped progress-bar-animated" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100" style="width: 50%;">50%</div>
                </div>
                <h5 style="width: 292px;">Milestones</h5>
                <li>{{milestones}}</li>
                <br>
                <button class="btn btn-primary" type="button" style="margin-top: 28px;">Update</button><button class="btn btn-primary" type="button" style="margin-right: 6px;margin-bottom: 0px;margin-left: 32px;margin-top: 28px;">Edit</button>
                <button
                    class="btn btn-primary" type="button" style="margin-right: 6px;margin-bottom: 0px;margin-left: 32px;margin-top: 28px;">Delete</button>
            </div>
        </div>
        
    </div>
    {{/user_courses}}
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>
</body>

</html>