<html>

<head>
  
</head>

<body>

    
    <div class="container">
        <h1>Welcome, {{name}}!</h1>
    </div>
    <!-- Start: 1 Row 1 Column -->
    <div style="margin-left: 0;margin-right: 0;padding: 6px;padding-left: 27px;padding-right: 54px;"></div>
    <!-- End: 1 Row 1 Column -->
     <div class="container">
       
        <div class="card"></div>
    </div>
    <!-- Start: 1 Row 2 Columns -->
    {{#if coursework}}
        
    <div>
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    {{#each coursework}}
                    <div class="card">
                        <div class="card-body" style="box-shadow: 1px 1px 7px 1px;">
                            
                            
                            <p class="card-title">Status: <b>{{status}}</b></p>
                            
                                {{!-- <p class="card-title" style="color: green">{{status}}</p>
                            {{/if}} --}}
                            <p class="card-title">Due date: <b>{{formatDate end 'MMMM D, YYYY'}}</b></p>
                            <h6 class="card-title">Coursework:<b> {{courseTitle}}</b></h6>
                            <h6 class="card-subtitle mb-2">Module: <b>{{module}}</b></h6>
                            <h6 class="text-muted card-subtitle mb-2">Milestones</h6>
                            {{#each milestones as |milestone|}}
                            <ul>
                                <li>{{milestone}}</li>
                            </ul>                            
                            {{/each}}
                            <p class="card-title">Started: <b>{{formatDate start 'MMMM D, YYYY'}}</b></p>
                            <a class="card-link" href="/edit/coursework/{{_id}}">Edit or Update Status</a><a class="card-link" href="/delete/coursework/{{_id}}">Delete</a><a class="card-link" id="myBtn">Share</a>
                            </div>
                            <div id="myModal" class="modal">

  <!-- Modal content -->
  <div class="modal-content">
    <span class="close">&times;</span>
    <p>Some text in the Modal..</p>
  </div>

</div>
                            
                    </div>
                    {{/each}}
                </div>
                <div class="col-md-6"></div>
            </div>
        </div>
    </div>
    {{else}}
    <br>
        <div class="container">
            <h5>You have no coursework</h5>
     </div>
        
    {{/if}}
    <!-- End: 1 Row 2 Columns -->
    <!-- Start: 1 Row 2 Columns 
    <div>
        <div class="container">
            <div class="row">
                <div class="col-md-6"></div>
                <div class="col-md-6"></div>
            </div>
        </div>
    </div>
    <!-- End: 1 Row 2 Columns -->
  
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>
</body>
</html>