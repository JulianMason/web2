<body>
    <!-- Start: Navigation with Search -->
  
    <!-- End: Navigation with Search -->
    <div class="container text-left" style="width: 351px;">
    <h3>Edit coursework</h3>
    <br>
        <form action="/{{coursework._id}}" method="POST">
            
            <label for="coursework">Coursework title</label>
            <div class="input-group">
                <div class="input-group-prepend"></div>
                <input class="form-control" type="text" placeholder="courseTitle" name="courseTitle" value="{{coursework.courseTitle}}" required="" title="ffef">
                <div class="input-group-append"></div>
            </div><label for="module">Module</label><label></label>
            <div class="input-group">
                <div class="input-group-prepend"></div>
                <input class="form-control" type="text" placeholder="module" name="module" value="{{coursework.module}}" required="">
                <div class="input-group-append"></div>
            </div>
            <fieldset id="fset">
                <legend>Milestones</legend>
            {{#each coursework.milestones as |milestone|}}
                <input class="form-control" type="text" name="milestones" value="{{milestone}}">
            {{/each}}
                <button onclick="add_field()" class="btn  btn-block" type="button">Click to input a milestone</button>
            </fieldset>
            <fieldset>
            <label for="start_date">Start Date</label>
                <input class="form-control" type="date" required="" name="start" value="{{formatDate coursework.start 'YYYY-MM-DD'}}">
            <label for="end_date" name="end_date">Completion Date</label>
                <input class="form-control" type="date" required="" name="end" value="{{formatDate coursework.end 'YYYY-MM-DD'}}">
                <select id="status" name="status" value="{{status}}">
                    {{#select coursework.status}}
                        <option value="Incomplete" selected>Incomplete</option>
                        <option value="Completed">Completed</option>
                    {{/select}}
                </select>
            <input class="btn btn-outline-primary" type="submit" value="Update"> <a href="/" class="btn btn-outline-primary">Cancel</a>
            </fieldset>
        </form>
    </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>
</body>

</html>